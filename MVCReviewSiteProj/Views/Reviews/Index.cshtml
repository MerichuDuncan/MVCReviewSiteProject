                        <h5>@Html.DisplayFor(model => item.Category.Type)</h5>
                        <h5>@Html.DisplayFor(model => item.BrandName)</h5>
                        <h5>@Html.DisplayFor(model => item.ModelName)</h5>
                        <p>@Html.DisplayFor(model => item.Content)</p>
                        <p><span class="label label-default">@Html.DisplayNameFor(model => model.overAllRate)</span>&nbsp;<strong>@Html.DisplayFor(modelItem => item.overAllRate)</strong></p>
                        @*<p><a href="#" class="btn btn-primary" role="button">Details</a></p>*@
                        @* @Html.ActionLink("Details", "Details", new { id = item.ID })*@
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" })
                    </div>
                </div>
            </div>
        }
    </div>


